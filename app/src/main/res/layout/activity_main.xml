<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.csis.lab05.MainActivity">


    <TextView
        android:text="Z VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AccelZValue"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="78dp" />

    <TextView
        android:text="Y VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AccelYValue"
        android:layout_above="@+id/AccelZValue"
        android:layout_alignStart="@+id/AccelZValue"
        android:layout_marginBottom="15dp" />

    <TextView
        android:text="Accelerometer X:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AccelXTest"
        android:layout_alignBaseline="@+id/AccelXValue"
        android:layout_alignBottom="@+id/AccelXValue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp" />

    <Switch
        android:text="On/Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/AccelXValue" />

    <TextView
        android:text="Accelerometer Y:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AccelYTest"
        android:layout_alignBaseline="@+id/AccelYValue"
        android:layout_alignBottom="@+id/AccelYValue"
        android:layout_alignStart="@+id/AccelXTest" />

    <TextView
        android:text="Accelerometer Z:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AccelZTest"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/AccelYTest" />

    <TextView
        android:text="X VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:id="@+id/AccelXValue"
        android:layout_above="@+id/AccelYValue"
        android:layout_alignEnd="@+id/AccelZValue" />

    <TextView
        android:text="Latitude:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AccelZTest"
        android:layout_toStartOf="@+id/switch1"
        android:layout_marginTop="44dp"
        android:id="@+id/LatText" />

    <TextView
        android:text="Longitude:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LatText"
        android:layout_alignStart="@+id/LatText"
        android:layout_marginTop="16dp"
        android:id="@+id/LongText" />

    <TextView
        android:text="LONG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/LongText"
        android:layout_alignStart="@+id/AccelZValue"
        android:id="@+id/LongValue" />

    <TextView
        android:text="LAT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LatValue"
        android:layout_above="@+id/LongText"
        android:layout_alignStart="@+id/LongValue" />

</RelativeLayout>
